<div class='col l4'>

  <div class='card hoverable card blue-grey darken-1'>

    <div class='card-content white-text'>

      <h5 class='card-title'>
        {{post_title}}
      </h5>
      <div class='light post-content'>
        {{post_body}}
      </div>
      <br />
      <div class='grey-text lighten-5'>
        <p>
          &nbsp Posted by
          {{user.name}}
          on
          {{format_date createdAt}}
          <span class='small material-icons left'>face</span>
          <span
            class='post-list secondary-content material-icons trash_btn'
            data-id='{{id}}'
          >
            delete
          </span>
        </p>
      </div>
      <br />
      <div class='comment-content card-action green-text text-lighten-2'>
        <h6><span class='left green-text'><i class='material-icons'>chat</i>
          </span>
          &nbsp Comments:
        </h6>
        <p>
          {{#each comments as |comment|}}
            <blockquote>{{format_date comment.createdAt}}
              -
              {{comment.comment_body}}
            </blockquote>
          {{/each}}
        </p>
      </div>
    </div>

  </div>

</div>